<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="700.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="klasy.Controller">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
       <Label fx:id="label" layoutX="410.0" layoutY="6.0" text="Brak połączenia" />
      <TabPane prefHeight="500.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="HP Laserjet">
            <content>
              <AnchorPane fx:id="p1" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="tabelka1" prefHeight="700.0" prefWidth="375.0">
                          <columns>
                            <TableColumn fx:id="t1" prefWidth="125.0" text="Drukarka" />
                            <TableColumn fx:id="t2" prefWidth="125.0" text="IP" />
                              <TableColumn fx:id="t3" prefWidth="125.0" text="Status" />
                          </columns>
                        </TableView>
                        <Button fx:id="pingButton" layoutX="375.0" layoutY="25.0" mnemonicParsing="false" onAction="#executequery" prefHeight="20" prefWidth="125" text="Odśwież" />
                         <Button fx:id="RefreshButton" layoutX="375.0" layoutY="50.0" mnemonicParsing="false" onAction="#pingFromConsole" prefHeight="20" prefWidth="125" text="Sprawdź połączenie" />
                         <Button fx:id="PrintButton" layoutX="375.0" layoutY="75.0" mnemonicParsing="false" onAction="#HPPrint" prefHeight="20" prefWidth="125" text="Drukuj" />
                         <Button fx:id="ZebraButton" layoutX="375.0" layoutY="100.0" mnemonicParsing="false"  prefHeight="20" prefWidth="125" text="Zebra" disable="true"/>

                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Zebra">
              <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                      <children>
                          <TableView prefHeight="700.0" prefWidth="375.0">
                              <columns>
                                  <TableColumn prefWidth="125.0" text="Drukarka" />
                                  <TableColumn prefWidth="125.0" text="IP" />
                                  <TableColumn prefWidth="125.0" text="Status" />
                              </columns>
                          </TableView>
                      </children>
                  </AnchorPane>
              </content>
          </Tab>
        </tabs>
      </TabPane>
      <TextArea fx:id="console" prefHeight="200.0" prefWidth="200.0" />
   </children>
</VBox>
